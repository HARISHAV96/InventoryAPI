@model InventoryAPI.Models.Inventory

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ItemId)

    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2", style = "font-size:medium;font-family:'Microsoft YaHei';" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", style = "font-size:medium;font-family:'Microsoft YaHei';border-color:#6495ed;border-style:solid;border-width:1px;" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2", style = "font-size:medium;font-family:'Microsoft YaHei';" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", style = "font-size:medium;font-family:'Microsoft YaHei';border-color:#6495ed;border-style:solid;border-width:1px;" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label col-md-2", style = "font-size:medium;font-family:'Microsoft YaHei';" })
        <div class="col-md-10">

            @Html.DropDownListFor(model => model.Category,
new SelectList(Enum.GetValues(typeof(Category))), "Select Category", new { @class = "btn  dropdown-toggle", style = "border-color:#6495ed;border-style:solid;border-width:1px;font-size:medium;font-family:'Microsoft YaHei';" })
            <br />
            @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.Availability, htmlAttributes: new { @class = "control-label col-md-2", style = "font-size:medium;font-family:'Microsoft YaHei';" })
        <div class="col-md-10">
            <span>Available </span> @Html.RadioButtonFor(m => m.Availability, "Available", htmlAttributes: new {style = "font-size:small;font-family:'Microsoft YaHei';" })
            <span>Not Available </span> @Html.RadioButtonFor(m => m.Availability, "Not Available", htmlAttributes: new {style = "font-size:medium;font-family:'Microsoft YaHei';" })
            @Html.ValidationMessageFor(model => model.Availability, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-2", style = "font-size:medium;font-family:'Microsoft YaHei';" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", style = "font-size:medium;font-family:'Microsoft YaHei';border-color:#6495ed;border-style:solid;border-width:1px;" } })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
